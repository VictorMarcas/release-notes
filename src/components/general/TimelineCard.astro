---
import MasterIndicator from '../icons/MasterIndicator.astro';

export interface Props {
	name: string,
    version: string,
}
const { name, version } = Astro.props
---


<article class="flex items-start gap-6 relative py-2.5">
    <span class="inline-flex justify-center after:content-[''] after:w-0.5 after:block after:bg-gray-900 after:absolute after:top-[27px] after:h-[calc(100%-18px)] after:z-0 after:mt-px">
        <MasterIndicator className="text-blue-instance relative z-[1]" />
    </span>
    <div>
        <header class="flex items-center gap-1.5">
            <div class="bg-blue-instance leading-5 py-1 px-3 rounded border border-gray-900 font-medium text-sm" aria-label="feature instance">
                <h4>{name}</h4>
            </div>
            <div class="bg-green-version leading-5 py-1 px-3 rounded border border-gray-900 font-medium text-sm" aria-label="feature version">{version}</div>
        </header>
        <div class="py-5 space-y-5">
            <slot />
        </div>
    </div>
</article>